extends ../_template

mixin documents-slider__item(pic)
  .documents-slider__item
    a(data-fancybox='gallery', href='assets/img/why-we/why-we-' + pic + '.jpg')
      img(src='assets/img/why-we/why-we-' + pic + '-thumb.jpg' alt='why we picture')

mixin documents-tab__body-row
  .documents-tab__body-row
    .documents-tab__body-row-inn
      .documents-tab__body-item
        span Приказ о назначении Директора Общества
      a(href="#").documents-tab__body-item.documents-tab__body-item--download
        +svg('download')
        span скачать

